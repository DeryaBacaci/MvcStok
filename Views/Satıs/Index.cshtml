@model MvcStok.Models.Entity.TBLSATISLAR
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayount.cshtml";
}

@*  data-toggle="modal"      =geçişi
    data-target="#Modal1"    =hedefi
*@
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#Modal1">
    Satış Yap
</button>

<a href="/Satıs/SatısEkranı/" class="btn btn-warning">Satış Ekranına Git</a>

<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Satış Yapma Ekranı</h2>
            </div>
            <form method="post" action="/Satıs/YeniSatis/">
                <div class="modal-body">
                    <label>
                        Ürün Adı
                    </label>
                    @*<input type="text" name="Urun" class="form-control" />*@
                    @Html.TextBoxFor(m => m.URUN, new { @class = "form-control" })
                    <br />
                    <label>
                        Müşteri Adı Soyadı
                    </label>
                    @*<input type="text" name="musterıadsoyad" class="form-control" />*@
                    @Html.TextBoxFor(m => m.MUSTERI, new { @class = "form-control" })
                    <br />
                    <label>
                        Adet
                    </label>
                    @Html.TextBoxFor(m => m.ADET, new { @class = "form-control" })
                    <br />
                    <label>
                        Fiyat
                    </label>
                    @Html.TextBoxFor(m => m.FIYAT, new { @class = "form-control" })
                    <br />
                    <button type="submit" class="btn btn-info">Satış İşlemini Yap</button>
                    @*<button type="submit"     =kabul butonu anlamını taşır*@
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Vazgeç</button>
                    @*data-dismiss="modal"    =vazgeç yani modeli unut dedik*@
                </div>
            </form>
        </div>
    </div>

</div>

